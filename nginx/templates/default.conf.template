server {
	charset utf-8;
    listen 80;
    server_name ${NGINX_HOST};

    root /usr/share/nginx/html;

    location / {
        auth_basic "Restricted Access";
        auth_basic_user_file /etc/nginx/.htpasswd;
        index  index.html index.htm;
        autoindex on;
    }

    error_page 500 502 503 504 /50x.html;

    location = /50x.html {
        root /usr/share/nginx/html;
    }
}
